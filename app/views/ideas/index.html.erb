<p id="notice"><%= notice %></p>

<h1>☆Ideas☆</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url, width: 150) if idea.picture.present? %></td>
        <td><button><%= link_to 'Show', idea %></button></td>
        <td><button><%= link_to 'Edit', edit_idea_path(idea) %></button></td>
        <td><button><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn_new"><%= link_to 'New Idea', new_idea_path %></button>
